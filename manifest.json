{
    "name": "AutoLeaveMeet",
    "description": "Automatically leave a Google meet when a certain threshold (number of participants leave within 12 seconds) is metÔºÅ",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "./js/background.js"
    },
    "icons": { 
     "128": "./img/alm-128.png" 
    },
    "permissions": ["storage", "tabs", "activeTab", "scripting"],
    "host_permissions": ["https://meet.google.com/*", "http://meet.google.com/*"],
    "action": {
      "default_popup": "popup.html"
    }
  }